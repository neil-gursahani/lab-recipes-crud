<form action="/recipes/update" method="POST">
    <input type="text" name="title" value="{{recipeHbs.title}}" placeholder="Dish Title">
    <input type="text" name="level" value="{{recipeHbs.level}}" placeholder="Dish Prep Level">
    <input type="text" name="cuisine" value="{{recipeHbs.cuisine}}" placeholder="Cuisine">
    <input type="text" name="dishType" value="{{recipeHbs.dishType}}" placeholder="Dish Type">
    <input type="text" name="duration" value="{{recipeHbs.duration}}" placeholder="Preparation time">
    <input type="text" name="creator" value="{{recipeHbs.creator}}" placeholder="Dish Creator">
    <button type="submit">Update</button>
</form>